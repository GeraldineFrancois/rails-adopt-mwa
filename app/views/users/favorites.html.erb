<h1>My favorites</h1>

<div class="col-xs-12 col-sm-6">
  <h3>Liked Animals</h3>
    <div class="favorites">
      <% @favorite_animals.each do |animal| %>
         <div data-category="<%= animal.favoritable_id %>" class="card">
      <div id="carousel<%= animal.favoritable_id %>" class="carousel slide">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carousel<%= animal.favoritable_id %>" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carousel<%= animal.favoritable_id %>" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carousel<%= animal.favoritable_id %>" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class= "card-img-top d-block w-100" src="https://res.cloudinary.com/dnhbgkoqn/image/upload/v1699357227/low-angle-dogs-near-adopt-me-banner_rvgso8.jpg" alt="">
              </div>
              <div class="carousel-item">
                <img class= "card-img-top d-block w-100" src="https://res.cloudinary.com/dnhbgkoqn/image/upload/v1699357227/low-angle-dogs-near-adopt-me-banner_rvgso8.jpg"  alt="">
              </div>
              <div class="carousel-item">
                <img class= "card-img-top d-block w-100" src="https://res.cloudinary.com/dnhbgkoqn/image/upload/v1699357227/low-angle-dogs-near-adopt-me-banner_rvgso8.jpg" alt="">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= animal.favoritable_id %>" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= animal.favoritable_id %>" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
      <div class="card-body">
        <h5 class="card-title">ok</h5>

          <p class="card-text">ok</p>


          <p class="card-text">ok</p>

        <%= link_to "Show more details", animal_path(animal), class:"btn btn-outline-primary w-100" %>

        <%= link_to(
          toggle_favorite_animal_path(animal),
          data: {turbo_method: :post}) do
        %>

          <%# <i class="fas fa-heart <%= animal.favorited_by?(current_user) ? 'favorite' : '' %>"></i> %>
        <% end %>
      </div>
    </div>
      <% end %>
    </div>
</div>
