
<%= simple_form_for @animal, html: { class: "column-form" } do |f| %>
  <%= f.input :name %>
  <%= f.input :breed, as: :check_boxes, collection: ["dog", "cat"], input_html: { class: "custom-class", type: "checkbox", data: { toggle: "toggle" } } %>
  <%= f.input :age %>
  <%# <%= f.input :age_unit, collection: ["months", "years"] %>
  <%= f.input :ok_vaccinated, as: :boolean, label: "Vaccinated" %>
  <%= f.input :ok_sterilised, as: :boolean, label: "Sterilised" %>
  <%= f.input :handicapped, as: :boolean, label: "Handicapped" %>
  <%= f.input :behaviour, as: :check_boxes, collection: ["playful", "calm"], input_html: { class: "custom-class", type: "checkbox", data: { toggle: "toggle" } } %>
  <%= f.input :compatibility, as: :check_boxes, collection: ["dog", "cat"], input_html: { class: "custom-class", type: "checkbox", data: { toggle: "toggle" } } %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file, input_html: { multiple: true } %>
  <%= f.input :location %>
  <%= f.submit %>
<% end %>
