
<%= simple_form_for @animal, html: { class: "column-form" } do |f| %>
  <%= f.input :name %>
  <%= f.input :breed, collection: ["dog", "cat"], include_blank: false %>
  <%= f.input :age %>
  <%= f.input :ok_vaccinated, as: :boolean, label: "Vaccinated" %>
  <%= f.input :ok_sterilised, as: :boolean, label: "Sterilised" %>
  <%= f.input :handicapped, as: :boolean, label: "Handicapped" %>
  <%= f.input :behaviour, collection: ["Playful", "Calm"], include_blank: false %>
  <%= f.input :compatibility, collection: ["dog", "cat"], include_blank: false %>
  <%= f.input :description %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.input :location %>
  <%= f.submit class: "btn-submit", style: "border:0px;" %>
<% end %>
